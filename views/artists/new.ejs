<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">Create Artist Profile</h1>
    <div class="col-6 offset-3">
        <form action="/artists/new" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="username">Artist name</label>
                <input class="form-control" type="text" id="username" name="username" required autofocus>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="email">Email</label>
                <input class="form-control" type="email" id="email" name="email" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input class="form-control" type="password" id="password" name="password" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label label="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="text" name="location" required>
            </div>
            <div class="mb-3">
                <label label="form-label" for="genre">Genre</label>
                <input class="form-control" type="text" id="genre" name="genre" required>
            </div>
            <div class="mb-3">
                <label label="form-label" for="about">About</label>
                <input class="form-control" type="text" id="about" name="about" required>
            </div>
            <div class="mb-3">
                <label label="form-label" for="size">Size (number of people in the group)</label>
                <input class="form-control" type="number" id="size" name="size" required>
            </div>
            <div class="mb-3">
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Create Profile</button>
            </div>
            <a href="/artists">All artists</a>
        </form>        
    </div>
</div>

